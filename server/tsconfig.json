{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "pretty": true,
    "outDir": "./dist",
    "baseUrl": "./src"
  },
  "include": [
    "**/*.ts"
  ],
 "exclude": [
    "node_modules",
    "test"
  ]
}
